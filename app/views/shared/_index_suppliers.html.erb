<% suppliers.each do |supplier|%>
  <div class="card bg-grey rounded-lg shadow-md p-6">
    <br>

      <span class="text-xl font-bold"> <%= supplier.supplier_name%></span>
      <br>
      <h1>NIT:</h1>
      <br>
      <h1><%=supplier.nit%></h1>
      <br>
      <h1><%= t('supplier_contact_person_name')%></h1>
      <br>
      <h1><%=supplier.contact_person_name.nil? ? t('.information_doesnt_exist'): supplier.contact_person_name %></h1>
      <br>
      <h1><%= t('bank')%></h1>
      <br>
      <h1><%= supplier.bank.title%></h1>
    <br>
    <%=link_to t('.edit_supplier'), edit_supplier_path(supplier), class: "py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow-md" %>
    <%=link_to t('.show'), supplier_path(supplier), class: "py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow-md" %>

    <%=link_to t('.delete_supplier'), supplier_path(supplier.nit), method: :delete, class: "py-2 px-4 bg-red-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow-md" , data: { turbo_method: :delete, turbo_confirm: "Â¿Estas seguro ?"}%>

  </div>
<%end%>
<%= will_paginate(suppliers) %>
